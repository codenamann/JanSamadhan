{
  "name": "jan-samadhan",
  "version": "1.0.0",
  "description": "A full-stack MERN application for citizen complaint management",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client"
  },
  "keywords": ["mern", "complaint", "citizen", "government"],
  "author": "Jan Samadhan Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}